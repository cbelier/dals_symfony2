{% extends 'base.html.twig' %}

{% block insertionLayout %}
    <div class="container">
        <div class="row mt centered ">
            <div class="col-lg-4 col-lg-offset-4">
                <h3>Les stars</h3>
                <hr>
            </div>
            <div class="col-lg-4 col-lg-offset-4">

                <input type="search" placeholder="recherche" name="search" class="form-control">
            </div>
        </div><!-- /row -->
        <div class="row">
            <div class="col-lg-4 ">
                <div class="list-group listeDeStars">
                    {% for star in stars %}
                        <a href="{{ star.id }}" class="list-group-item list-group-item-action">{{ star.firstnameCelebrity }} {{ star.lastnameCelebrity }}</a>
                    {% endfor %}
                </div>
            </div>
        </div>

    </div>
{% endblock %}